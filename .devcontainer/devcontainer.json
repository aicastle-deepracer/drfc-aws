{
    "name": "My Codespace Project",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
        "cpus": 2
    },
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "github.copilot"
            ],
            "settings": {
                "workbench.editorAssociations": {
                    "*.ipynb": "jupyter-notebook",
                    "README.md": "vscode.markdown.preview.editor",
                    "00_Initialize.md": "vscode.markdown.preview.editor"
                }
            }
        }
    },
    "updateContentCommand": "python3 -m pip install -r requirements.txt",
    "postCreateCommand": "code reward_function.py 01_Instance.ipynb 02_Setup.ipynb 03_Training.ipynb"
}
